{{#with travel}}
<div class="container">
    <div class="detailInfo mt-4">
        <h1>{{destiny}}</h1>
        <div class="d-flex">
            <h3>{{format price}}</h3>
            {{#if discount}}
                <h3 class="text-success">{{extra discount}}</h3>
            {{else}}
                <h3>Descuento No Disponible</h3>
            {{/if}}
        </div>
    </div>

    <div>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {{#each ../images}}
                    <img src="/uploads/{{path}}" alt="FotografÃ­a" class="swiper-slide">
                {{/each}}
            </div>

            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>            
            <div class="swiper-scrollbar"></div>
        </div>
    </div>

    <div class="row mt-2 detailInfo">
        <p>Fecha Salida: {{time dateInit}}</p>
        <p>Fecha Vuelta: {{time dateTurn}}</p>
        <p>Creado Por: {{author}}</p>
    </div>
</div>
{{/with}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js"></script>

<script>
    var swiper = new Swiper('.swiper-container', {
        effect: 'coverflow',
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: 2,
        coverflowEffect: {
            rotate: 60,
            depth: 120,
            modifier: 0.8
        },
        pagination: {
            el: '.swiper-pagination',
        },
    })
</script>