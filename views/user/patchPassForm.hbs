<form action="/user/forgotPassword/patchNew/?_method=PATCH" method="POST">
    <input type="hidden" name="hash" value="{{hash}}">
    <input type="hidden" name="id" value="{{id}}">
    <input type="password" name="password" placeholder="Inserta aquí tu Contraseña" required>
    <input type="submit" value="Aceptar" class="btn btn-sm btn-outline-success mt-4">
    <small>Proceso verificado vía hash: #{{hash}}.</small>
    <small>El hash se reiniciará al final del proceso.</small>
</form>